            "program": "emote.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Fetch Summertime Saga Source",
            "type": "python",
            "request": "launch",
            "program": "emote.py",
            "args": [
                "source",
                "fetch",
                "--debug",
                "--kind",
                "SummertimeSaga"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Update Repository",
            "type": "python",
            "request": "launch",
            "program": "emote.py",
            "args": [
                "repository",
                "update",
                "--debug"
            ],
            "console": "integratedTerminal"
        }
    ]
}